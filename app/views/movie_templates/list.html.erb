<h1>List of all movies</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

<% Movie.all.order({:title => :asc}).each do |movie|%>
  <tr>
    <td><%= movie.id %></td>
    <td>
      <img src="<%= movie.image %>" width="100">
    </td>
    <td><%= movie.title %></td>
    <td><%= movie.year %></td>
    <td>
    <% matching_records = Director.where({ :id => movie.director_id}) %>
    <% the_director = matching_records.at(0) %>
    <%= the_director.name %>
    </td>
    <td>
      <a href="/movies/<%= movie.id %>">Show details</a>
    </td>
  </tr>
<% end%>


</table>
